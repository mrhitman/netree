{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "strict": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
